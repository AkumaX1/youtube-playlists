{
  "name": "youtube-playlists",
  "description": "Create on-the-fly YouTube playlists",
  "version": "3.2.3",
  "author": "ndom91 <yo@ndo.dev>",
  "homepage": "https://youtube.ndo.dev",
  "repository": "https://github.com/ndom91/youtube-playlists",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ndom91/youtube-playlists/issues"
  },
  "scripts": {
    "start": "BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:ci": "cypress run --record",
    "lint:css": "stylelint './src/**/styled.js'",
    "prettier": "prettier --check \"src/**/*.js\"",
    "prettier:fix": "prettier --write \"src/**/*.js\" && stylelint --fix 'src/**/styled.js' ",
    "prepare": "husky install"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "react": "^17.0.1",
    "react-dnd": "^11.1.3",
    "react-dnd-html5-backend": "^11.1.3",
    "react-dom": "^17.0.1",
    "react-joyride": "^2.3.0",
    "react-scripts": "4.0.1",
    "react-toastify": "^6.2.0",
    "react-youtube": "^7.13.0",
    "styled-components": "^5.2.1",
    "styled-media-query": "^2.1.2",
    "undux": "^5.2.0"
  },
  "devDependencies": {
    "cypress": "^6.2.0",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "stylelint": "^13.8.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0"
  },
  "hooks": {
    "pre-commit": [
      "lint-staged"
    ]
  },
  "lint-staged": {
    "{*.{js, jsx}}": "npm run lint:js",
    "src/**/styled.js": "npm run lint:css",
    "*.css": "stylelint --fix"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "parser": "babel",
    "semi": false,
    "arrowParens": "avoid"
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-styled-components"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
